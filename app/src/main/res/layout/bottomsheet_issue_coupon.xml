<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <TextView
            android:id="@+id/tv_reward_title"
            style="@style/subtitle.18.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="선물 이름" />

        <TextView
            android:id="@+id/tv_label1"
            style="@style/subtitle.16.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰이 활성화 되었어요!"
            android:textColor="@color/gray_800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_reward_title"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <ImageView
            android:id="@+id/iv_coupon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:background="@drawable/shape_oval_primary_200"
            android:src="@drawable/ic_reward_coupon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_label2"
            style="@style/caption.12.500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="언제까지 선물을 주실 예정인가요?\n선물 예정일은 수정이 불가하니 신중하게 정해주세요."
            android:textColor="@color/gray_500"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_coupon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_select_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_gray_stroke_light_gray_bg_r8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label2"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                style="@style/body.14.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선물 예정일"
                android:textColor="@color/gray_500" />
            
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_selected_date"
                style="@style/body.14.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜를 설정해주세요"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_800"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>
            
            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_issue_coupon"
            style="@style/subtitle.16.600.modal.btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_btn_rectangle_r8_enabled"
            android:text="쿠폰 발급하기"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_select_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
