<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/selector_stroke_rectangle_r8_selected">

        <TextView
            android:id="@+id/tv_content"
            style="@style/body.14.500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="@color/gray_800"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="미션 내용"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/caption.12.500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray_500"
            tools:text="04.23"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_reject"
            style="@style/caption.12.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="6dp"
            android:textSize="12dp"
            android:textColor="@color/error_500"
            android:text="거절하기"
            android:background="@drawable/btn_reject"/>

    </LinearLayout>
</layout>
