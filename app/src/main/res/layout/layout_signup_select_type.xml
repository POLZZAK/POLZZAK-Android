<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO 디자인 가이드 적용 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="164dp"
            android:gravity="center_horizontal"
            android:text="회원 종류를 선택해주세요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBtnSelectParent"
            android:layout_width="0dp"
            android:layout_height="201dp"
            android:background="@color/blue_500"
            android:gravity="center"
            android:text="보호자\n회원"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvBtnSelectKid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvBtnSelectKid"
            android:layout_width="0dp"
            android:layout_height="201dp"
            android:background="@color/gray_500"
            android:gravity="center"
            android:text="아이\n회원"
            app:layout_constraintBottom_toBottomOf="@id/tvBtnSelectParent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvBtnSelectParent"
            app:layout_constraintTop_toTopOf="@id/tvBtnSelectParent" />

        <TextView
            android:id="@+id/tvBtnAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/bg_signup_set_nickname_btn_check_validation"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="다음"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBtnSelectParent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>