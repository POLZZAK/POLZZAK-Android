<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="22dp"
        android:paddingBottom="23dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/subtitle.16.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:text="도장 선택"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_page"
            style="@style/body.13.500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray_500"
            android:text="2/2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/iv_selected_stamp"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_page"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_stamp_name"
            style="@style/subtitle.16.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/gray_800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_selected_stamp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="짱 잘했어요"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_stamp_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:overScrollMode="never"
            app:layout_constraintStart_toEndOf="@id/tv_left"
            app:layout_constraintTop_toBottomOf="@id/tv_stamp_name"
            app:layout_constraintEnd_toStartOf="@id/tv_right"
            tools:itemCount="5"
            tools:listitem="@layout/item_selecting_stamp" />

        <ImageView
            android:id="@+id/tv_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_stamp_list"
            app:layout_constraintEnd_toStartOf="@id/rv_stamp_list"
            app:layout_constraintBottom_toBottomOf="@id/rv_stamp_list"
            />

        <ImageView
            android:id="@+id/tv_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/gray_400"
            app:layout_constraintStart_toEndOf="@id/rv_stamp_list"
            app:layout_constraintTop_toTopOf="@id/rv_stamp_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rv_stamp_list"
            />

        <Button
            android:id="@+id/btn_prev"
            style="@style/subtitle.16.600.modal.btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:text="@string/common_prev"
            android:background="@drawable/btn_modal_negative"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_stamp_list"
            app:layout_constraintEnd_toStartOf="@id/btn_makeStamp"/>

        <Button
            android:id="@+id/btn_makeStamp"
            style="@style/subtitle.16.600.modal.btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="도장 찍기"
            android:background="@drawable/selector_btn_rectangle_r8_enabled"
            app:layout_constraintStart_toEndOf="@id/btn_prev"
            app:layout_constraintTop_toBottomOf="@id/rv_stamp_list"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>