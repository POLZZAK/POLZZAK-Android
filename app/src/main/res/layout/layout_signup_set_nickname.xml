<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvGuideTitle"
            style="@style/title.22.700"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="start"
            android:text="@string/signup_set_nickname_guide_title"
            android:textColor="@color/gray_800"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGuideContent"
            style="@style/body.15.500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/signup_set_nickname_guide_content"
            android:textColor="@color/gray_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGuideTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGuideContent"
            app:layout_constraintVertical_bias="0.18">

            <TextView
                android:id="@+id/tvPatternGuide"
                style="@style/body.13.500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/signup_set_nickname_pattern_guide"
                android:textColor="@color/gray_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etInput"
                style="@style/body.14.500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/signup_set_nickname_input_hint"
                android:inputType="text"
                android:paddingVertical="15dp"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                app:layout_constraintEnd_toStartOf="@id/tvBtnCheckValidation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPatternGuide" />

            <ImageView
                android:id="@+id/ivBtnClearText"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_edit_text_clear"
                app:layout_constraintBottom_toBottomOf="@id/etInput"
                app:layout_constraintEnd_toEndOf="@id/etInput"
                app:layout_constraintTop_toTopOf="@id/etInput" />

            <TextView
                android:id="@+id/tvBtnCheckValidation"
                style="@style/body.14.600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:paddingHorizontal="13dp"
                android:paddingVertical="15dp"
                android:text="@string/signup_set_nickname_check_validation"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/etInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/etInput"
                app:layout_constraintTop_toTopOf="@id/etInput" />

            <TextView
                android:id="@+id/tvCheckDuplicatedResult"
                style="@style/caption.12.600"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvInputLength"
                app:layout_constraintStart_toStartOf="@id/etInput"
                app:layout_constraintTop_toBottomOf="@id/etInput"
                app:layout_constraintVertical_bias="0.0"
                tools:text="사용 가능한 닉네임이에요" />

            <TextView
                android:id="@+id/tvInputLength"
                style="@style/caption.12.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/gray_500"
                app:layout_constraintEnd_toEndOf="@id/etInput"
                app:layout_constraintStart_toEndOf="@id/tvCheckDuplicatedResult"
                app:layout_constraintTop_toTopOf="@id/tvCheckDuplicatedResult"
                tools:text="1/10" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>