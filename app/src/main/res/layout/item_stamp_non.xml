<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="15dp">

        <!-- 상단 -->
        <TextView
            android:id="@+id/memberType"
            style="@style/MemberType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/userNickNameHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/userNickNameHeader"
            tools:text="엄마" />

        <TextView
            android:id="@+id/userNickNameHeader"
            style="@style/subtitle.20.600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/gray_800"
            app:layout_constraintStart_toEndOf="@id/memberType"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="0dp"
            tools:text="쿼카" />

        <TextView
            style="@style/subtitle.20.400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님과 함께해요"
            android:textColor="@color/gray_600"
            app:layout_constraintBottom_toBottomOf="@id/userNickNameHeader"
            app:layout_constraintStart_toEndOf="@id/userNickNameHeader" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/round_dashed_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNickNameHeader">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_pouding_no_stamp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userNickNameContent"
                style="@style/body.14.600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/gray_700"
                app:layout_constraintEnd_toStartOf="@id/userTitle"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img"
                tools:text="해린맘" />

            <TextView
                android:id="@+id/userTitle"
                style="@style/body.15.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님과"
                android:textColor="@color/gray_700"
                app:layout_constraintBottom_toBottomOf="@id/userNickNameContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/userNickNameContent" />

            <TextView
                style="@style/body.15.500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진행 중인 도장판이 없어요"
                android:textColor="@color/gray_700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userNickNameContent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>