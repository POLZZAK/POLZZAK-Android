<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isSearchMode"
            type="Boolean" />

        <variable
            name="hasSearchedResult"
            type="Boolean" />

        <variable
            name="faqType"
            type="com.polzzak_android.presentation.feature.myPage.model.FAQType" />

        <variable
            name="fragment"
            type="com.polzzak_android.presentation.feature.myPage.protector.cs.ProtectorCSFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.feature.myPage.protector.cs.ProtectorCSFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 검색 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cs_search_container"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_gray_stroke_white_bg_r8"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/cs_search_bar"
                        style="@style/body.14.500"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="궁금한 것을 검색해보세요!"
                        android:maxLines="1"
                        android:paddingEnd="30dp"
                        android:textColorHint="@color/gray_400"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/cs_search_icon"
                        setVisibility="@{!isSearchMode}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:onClick="@{() -> fragment.setSearchedMode(true)}"
                        android:src="@drawable/ic_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        style="@style/body.14.600"
                        setVisibility="@{isSearchMode}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> fragment.setSearchedMode(false)}"
                        android:text="취소"
                        android:textColor="@color/gray_600"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 컨텐츠 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cs_faq_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cs_search_container">

                    <TextView
                        android:id="@+id/cs_faq_title"
                        style="@style/body.14.700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="자주 묻는 질문"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@id/cs_faq_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/cs_faq_menu"
                        setVisibility="@{!isSearchMode}"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray_300"
                        android:orientation="horizontal"
                        android:paddingVertical="1dp"
                        app:layout_constraintBottom_toTopOf="@id/cs_faq_rc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cs_faq_title">

                        <TextView
                            android:id="@+id/cs_menu_stamp"
                            style="@style/caption.12.500"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_cs_menu"
                            android:gravity="center"
                            android:onClick="@{(view) -> fragment.updateAdapter(faqType.STAMP, view)}"
                            android:text="도장판"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:id="@+id/cs_menu_coupon"
                            style="@style/caption.12.500"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_cs_menu"
                            android:gravity="center"
                            android:onClick="@{(view) -> fragment.updateAdapter(faqType.COUPON, view)}"
                            android:text="선물 쿠폰"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:id="@+id/cs_menu_linked"
                            style="@style/caption.12.500"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_cs_menu"
                            android:gravity="center"
                            android:onClick="@{(view) -> fragment.updateAdapter(faqType.LINKED, view)}"
                            android:text="연동"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:id="@+id/cs_menu_point"
                            style="@style/caption.12.500"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_cs_menu"
                            android:gravity="center"
                            android:onClick="@{(view) -> fragment.updateAdapter(faqType.POINT, view)}"
                            android:text="포인트/레벨"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:id="@+id/cs_menu_account"
                            style="@style/caption.12.500"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_cs_menu"
                            android:gravity="center"
                            android:onClick="@{(view) -> fragment.updateAdapter(faqType.ACCOUNT, view)}"
                            android:text="계정"
                            android:textColor="@color/gray_600" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cs_faq_rc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="40dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cs_faq_menu"
                        tools:listitem="@layout/item_faq" />

                    <TextView
                        style="@style/body.14.500"
                        setVisibility="@{!hasSearchedResult}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="검색결과가 없어요\n1:1 문의를 이용해주세요!"
                        android:textColor="@color/gray_700"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cs_faq_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>