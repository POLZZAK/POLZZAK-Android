    </style>

    <!-- BottomNav 스타일 -->
    <style name="polzzakBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemIconTint">@color/selector_bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/selector_bottom_nav_text_color</item>
        <item name="itemTextAppearanceActive">@style/bottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavText</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

